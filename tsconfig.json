{
  "exclude": [
    "./templates",
    "build",
    "node_modules"
  ],
  "extends": "./node_modules/@adonisjs/mrm-preset/_tsconfig",
  "compilerOptions": {
    "target": "ES2015",
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "@adonisjs/lucid",
      "@adonisjs/core",
    ],
    "outDir": "build",
    "paths": {
      "App/Models/*": [
        "./src/Models/*"
      ]
    },
  }
}